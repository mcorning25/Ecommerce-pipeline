CREATE TABLE fact.orders (
    order_key SERIAL PRIMARY KEY,
    order_id VARCHAR(50) NOT NULL,
    customer_key INTEGER REFERENCES dim.customers(customer_key),
    product_key INTEGER REFERENCES dim.products(product_key),
    order_date_key INTEGER REFERENCES dim.dates(date_key),
    
    -- Measures
    quantity INTEGER,
    unit_price DECIMAL(10,2),
    line_total DECIMAL(10,2),
    discount_amount DECIMAL(10,2),
    net_amount DECIMAL(10,2),
    
    -- Degenerate dimensions (kept in fact table)
    order_status VARCHAR(50),
    payment_method VARCHAR(50),
    shipping_method VARCHAR(50),
    currency_code VARCHAR(3),
    
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
